@model IndexVM

@{
    ViewBag.Title = "Employees List";
}

<ul>
    @foreach (var employee in Model.ListOfIndexVmItems)
    {
        <li>
            <a  style="color: @(employee.ShowAsHighlighted ? "red": "inherit")" asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">@employee.Name</a>

        </li>
    }
</ul>